{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "make",
            "options": {
                "cwd": "${workspaceFolder}/build-textEditor-qmake-Debug/"
            },
            "group": "build"
        },
        {
            "label": "run",
            "type": "shell",
            "command": "./textEditor",
            "options": {
                "cwd": "${workspaceFolder}/build-textEditor-qmake-Debug"
            },
            "group": "build"
        },
        {
            "label": "clean",
            "type": "shell",
            "command": "make clean",
            "options": {
                "cwd": "${workspaceFolder}/build-textEditor-qmake-Debug/"
            },
            "group": "build"
        }
    ]
}
